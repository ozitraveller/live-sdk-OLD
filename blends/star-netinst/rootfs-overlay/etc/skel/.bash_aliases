alias up='sudo apt-get update && sudo apt-get dist-upgrade'
alias upd='sudo apt-get update'
alias get='sudo apt-get install'
alias rem='sudo apt-get autoremove'
alias cl='sudo apt-get autoclean'
alias se='apt-cache policy'
alias upg='sudo update-grub'
alias grc='ps aux | grep'
alias re='source ~/.bashrc'
alias al='cat ~/.bash_aliases'
alias pr='source ~/.profile'
alias sdk='cd ~/live-sdk'
alias diy='cd ~/diy-devuan'
alias clean='sudo ~/live-sdk/clean'
alias cd..='cd ..'
alias md='mkdir'
alias sdn='sudo shutdown -h now'
alias rbt='sudo reboot'
alias prg="sudo apt-get purge"
alias ls='ls -F --color --group-directories-first'
alias l="ls -lha"
alias c='clear'
alias q='exit'
alias s='sudo'
alias ct='rm -rf ~/.local/share/Trash/files/* && rm -rf ~/.local/share/Trash/info/* && rm -rf ~/.local/share/Trash/expunged/*'
alias mshr='sudo mount -t vboxsf -o uid=$UID,gid=$(id -g) share ~/host'
